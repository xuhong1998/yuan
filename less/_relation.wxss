.content h2 {
  text-align: center;
  font-size: 36px;
  color: #4a4a4a;
  font-weight: bold;
  margin: 50px 0 50px 0;
}
@media (max-width: 768px) {
  .content h2 {
    margin: 0 0;
    font-size: 18px;
  }
}
.content h2 i {
  width: 58px;
  height: 3px;
  background: #e2e2e2;
  display: block;
  margin: 0 auto;
  margin-top: 20px;
}
@media (max-width: 768px) {
  .content h2 i {
    height: 1px;
    margin-top: 10px;
  }
}
.content p {
  font-size: 15px;
  color: #4a4a4a;
  line-height: 39px;
  text-indent: 2em;
  /* width: 1054px; */
  margin: 0 auto;
  text-align: justify;
  /* padding: 0 5%; */
  padding-right: 57px;
}
@media (max-width: 768px) {
  .content p {
    padding-right: 0;
    line-height: 1.8;
    font-size: 14px;
  }
}
.current {
  display: block;
}
li {
  list-style: none;
}
.images {
  border: none;
  /* margin: 0 auto; */
  text-align: center;
  width: 100%;
  /*height:100%;*/
}
.contact-icon,
.adress {
  /* width:1200px; */
  margin-left: auto;
  margin-right: auto;
  padding-left: 0px;
}
.contact-icon li {
  position: relative;
}
.contact-icon li img {
  width: 90px;
  height: 102px;
  margin: 0 auto;
  display: block;
}
.contact-icon li span {
  text-align: center;
  margin-top: 36px;
  color: #232323;
  font-size: 16px;
  display: block;
  line-height: 32px;
  word-break: break-all;
}
@media (max-width: 768px) {
  .contact-icon li {
    margin-bottom: 20px;
  }
  .contact-icon li span {
    margin-top: 10px;
  }
  .contact-icon li > div {
    display: none;
  }
}
.adress {
  border-top: 1px solid #e2e2e2;
  margin-top: 70px;
}
@media (max-width: 768px) {
  .adress {
    margin-top: 0;
  }
}
.adress ul {
  padding-top: 70px;
}
@media (max-width: 768px) {
  .adress ul {
    padding-top: 30px;
    padding-left: 0;
  }
}
.adress ul li {
  /* float:left; */
  /* width:50%; */
  margin-bottom: 64px;
  padding: inherit;
}
@media (max-width: 768px) {
  .adress ul li {
    margin-bottom: 20px;
  }
}
.adress .left {
  /* width:192px; */
  /* float:left; */
}
.adress .left .images {
  width: 100%;
  height: auto;
}
.adress .right h2 {
  font-size: 18px;
  color: #232323;
  line-height: 32px;
  border-bottom: 1px solid #ddd;
  font-weight: bold;
  margin-bottom: 16px;
  margin-top: 0px;
}
.adress .right h2 i {
  width: 72px;
  height: 1px;
  background: #11277d;
  display: block;
  margin-top: 14px;
}
.adress .right p {
  font-size: 12px;
  color: #232323;
  line-height: 28px;
}
@media (max-width: 768px) {
  .adress .right h2 {
    margin-top: 10px;
  }
  .adress .right h2 i {
    margin-top: 4px;
  }
  .adress .right p {
    line-height: 1.8;
  }
}
.slides li {
  display: list-item;
}
.slides li img {
  width: 100%;
  display: block;
}
.flexslider {
  padding: 0;
  background: #fff;
  position: relative;
  zoom: 1;
}
#main-slider:before {
  content: '';
  width: 100%;
  height: 100%;
  background: rgba(43, 150, 204, 0.1);
  z-index: 1;
  position: absolute;
}
.slides {
  padding-left: 0px;
}
.content {
  margin-top: 30px;
  margin-bottom: 50px;
}
.culture {
  background-color: #eef3f9;
}
@media (max-width: 768px) {
  .culture {
    padding-top: 30px;
  }
}
.firm {
  display: flex;
  margin-bottom: 90px;
}
.firm p {
  margin-top: 20px;
  font-size: 17px;
  text-indent: 0;
  padding-right: 0;
  text-align: center;
  line-height: 1.8;
}
.firm img {
  margin: 0 auto;
  display: block;
}
@media (min-width: 768px) {
  .firm {
    justify-content: space-between;
  }
}
@media (max-width: 768px) {
  .firm {
    flex-direction: column;
    text-align: center;
  }
  .firm img {
    max-width: 100%;
    display: block;
    margin: 20px auto;
  }
}
.time {
  display: flex;
  justify-content: space-between;
  margin-bottom: 90px;
}
@media (max-width: 768px) {
  .time {
    margin-bottom: 0;
    flex-direction: column;
  }
  .time p {
    font-size: 14px;
    margin: 10px 0;
  }
  .time img {
    margin: 0 auto;
    display: block;
    max-width: 100%;
  }
}
.time .col-md-4 p {
  margin-top: 30px;
}
.timeImg {
  position: relative;
}
.timeImg img {
  position: absolute;
  bottom: 0px;
}
@media (max-width: 768px) {
  .timeImg img {
    position: static;
    margin: 0 auto;
    display: block;
    max-width: 100%;
  }
}
.navigation-list ul li:nth-child(1) {
  background-color: #11277d;
}
.navigation-list ul li:nth-child(1) a {
  color: #fff;
}
@media (min-width: 768px) {
  .navigation-list ul li:nth-child(1)::after {
    display: block;
    position: absolute;
    content: '';
    width: 0;
    height: 0;
    border-style: solid;
    border-width: 12px 15px 0 15px;
    border-color: #11277d transparent transparent transparent;
    top: 97%;
    left: 50%;
    background-color: #FFFFFF;
    transform: translateX(-50%);
  }
}

