.slides li {
  display: list-item;
}
.slides li img {
  width: 100%;
  display: block;
}
.flexslider {
  padding: 0;
  background: #fff;
  position: relative;
  zoom: 1;
}
#main-slider:before {
  content: '';
  width: 100%;
  height: 100%;
  background: rgba(43, 150, 204, 0.1);
  z-index: 1;
  position: absolute;
}
.slides {
  padding-left: 0px;
}
a {
  text-decoration: none;
  color: #333;
}
.navigation {
  width: 100%;
  border-bottom: #e2e2e2   solid 2px ;
}
.navigation-list {
  margin: 0px auto;
}
@media (min-width: 768px) {
  .navigation-list {
    width: 62%;
  }
}
.slides {
  margin-bottom: 0px;
}
.navigation-list ul li {
  line-height: 38px;
  font-size: 15px;
  padding: 0px 20px;
}
@media (max-width: 768px) {
  .navigation-list ul {
    display: flex;
    flex-wrap: wrap;
    margin: 0;
  }
  .navigation-list ul li {
    width: 25%;
    padding: 0;
    text-align: center;
  }
}
@media (min-width: 768px) {
  .navigation-list ul li:after,
  .navigation-list ul li:first-child::before {
    content: '';
    display: block;
    width: 1px;
    height: 25px;
    background-color: #ccc;
    position: absolute;
    top: 12px;
    left: 100%;
  }
}
.navigation-list ul li:first-child::before {
  left: 0;
}
.input {
  border-left: #e2e2e2 solid 1px;
  border-right: #e2e2e2 solid 1px;
  border-bottom: #e2e2e2 solid 1px;
  padding: 20px;
}
.input input {
  margin: 20px 0px;
}
.input .big {
  padding-top: 20px;
  padding-bottom: 100px;
}
.input button {
  text-align: center;
  width: 100%;
  color: #ffffff;
  background-color: #ff8000;
}
